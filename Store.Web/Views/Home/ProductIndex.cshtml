@model IEnumerable<ProductDto>
<form>
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1 ">
                        <div class="card border-0 p-3 shadow custom-background border-top border-5 rounded">
                            
                                <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 350px;" />
                           
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-secondary opacity-75 text-uppercase text-center">@product.Name</p>
                                    <p class="card-title text-warning text-center">by : <b>@product.CategoryName</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-white text-opacity-75 text-center mb-0">
                                        List Price:
                                        <span class="text-light text-opacity-75 text-center">
                                            @product.Price.ToString("c")
                                        </span>
                                    </p>
                                </div>
                                
                            </div>
                            <div>
                                <a asp-action="ProductDetails" asp-route-productId="@product.ProductId"
                                   class="btn btn-success bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>